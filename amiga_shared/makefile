#include ../Makefile.amiga.common

# Uncomment the next line if you are cross compiling
CROSS_COMPILE = ppc-amigaos-
CC     = $(CROSS_COMPILE)gcc
STRIP  = $(CROSS_COMPILE)strip
CXX    = $(CROSS_COMPILE)c++ 
AS     = $(CROSS_COMPILE)as 
AR     = $(CROSS_COMPILE)ar
LD     = $(CROSS_COMPILE)ld 
RANLIB = $(CROSS_COMPILE)ranlib 
RM     = rm -Rf

# Change these as required
OPTIMIZE = -O2
DEBUG    = -gstabs # -DDEBUG
CFLAGS   = -I. -Iinclude -I../lib/ -Wall $(AMIGA_CFLAGS) $(OPTIMIZE) $(DEBUG)

# Flags passed to gcc during linking
LINK = -gstabs -L../lib/.libs -Wl,--no-undefined

# Name of the "thing" to build
TARGET = fribidi.library

# Additional linker libraries
LIBS = -lfribidi

# Version of the library to build
VERSION = 54

# -------------------------------------------------------------
# Nothing should need changing below this line

SRCS = init.c stubs.c
OBJS = $(SRCS:.c=.o)

LINKOBJS = autoinit_fribidi_base.o autoinit_fribidi_main.o libstubs.o fribidi_globals.o

all: checklib $(TARGET) libfribidi-auto.a

# Rules for building
$(TARGET): $(OBJS)
	$(CC) $(LINK) -nostartfiles -o $@.debug $(OBJS) $(LIBS) -Wl,-L.,--cref,-M,-Map=$@.debug.map
	$(STRIP) -R.comment $@.debug -o $@

libfribidi-auto.a: $(LINKOBJS)
	$(AR) rcs $@ $(LINKOBJS)

checklib:
ifeq (,$(wildcard ../lib/.libs/libfribidi.a))
	$(error Please compile libfribidi first!)
endif

.PHONY: clean
clean:
	$(RM) $(TARGET) *.debug* $(OBJS) $(LINKOBJS) libfribidi-auto.a examples/BidiTest examples/BidiBenchmark

.PHONY: revision
revision:
	bumprev $(VERSION) $(TARGET)